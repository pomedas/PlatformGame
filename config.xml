    <fullscreen_window value="false"/>
  </window>

  <scene>
    <map path="Assets/Maps/" name="MapTemplate.tmx"/>
  </scene>

  <entities>
	  <player x="550" y="1700" w="100" h ="32" speed="7.0" texturepath="Assets/Textures/Idle.png">
